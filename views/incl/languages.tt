<% IF conf.show_language_links %>
  <% IF languages.size > 1 %>
  <div id="sites">
    <ul>
    <% FOR lang IN languages %>
       <li>
          <a href="<% lang.url %>"><% lang.name %></a>
          <% IF lang.current %><span class="glyphicon glyphicon-ok"></span><% END %>
       </li>
    <% END %>
       <li><hr></li>
       <li><a href="https://<% domain %>/about#translations">about the translations</a></li>
    </ul>
  </div>
  <% END %>
<% END %>
